# grep docker install app name
dpkg -l | grep docker

# show install app file
dpkg -L

# show install app info
dpkg -s

# remove package
sudo dpkg -r package_name

# how to find the install files with pkg name
root@ci-lava:/# dpkg --list | grep lava
ii  lava-dispatcher                   2017.5+4665.2adaae6f-1         amd64        Linaro Automated Validation Architecture dispatcher
root@ci-lava:/# dpkg -L lava-dispatcher


# show this package install binary
dpkg -L android-tools-fsutils